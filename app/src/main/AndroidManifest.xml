<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.binomed.jef.udacityapp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".NewListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewDetailActivity"
            android:label="@string/title_new_detail"
            android:parentActivityName=".NewListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".NewListActivity" />
        </activity>
    </application>

</manifest>
