<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.News</item>
    </style>

    <style name="NewsTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.News.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.News" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/news_blue</item>
    </style>

    <style name="ActionBar.Solid.News.NoTitle" parent="@style/ActionBar.Solid.News">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <!-- Style for news listview -->
    <style name="NewsListStyle">
        <!-- Here it's a stub.  In screens of sufficient width, this style includes modifications
        for two-pane layout -->
    </style>

</resources>
